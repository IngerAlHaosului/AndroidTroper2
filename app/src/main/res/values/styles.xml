<resources>
    <style name="AppLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/at_dark</item>
        <item name="colorAccent">@color/at_light</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="preferenceTheme">@style/Preference.Overlay</item>
        <item name="android:listSelector">@drawable/tab_selector_background</item>
    </style>


    <style name="AppDark" parent="Theme.AppCompat.NoActionBar">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowBackground">@color/at_dark</item>
        <item name="colorPrimaryDark">@color/at_dark</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorAccent">@color/at_light</item>
        <item name="android:listSelector">@drawable/tab_selector_background</item>
    </style>

    <style name="Preference.Overlay" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="colorControlActivated">@color/at_light</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="sectionHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableBottom">@drawable/section_header</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
